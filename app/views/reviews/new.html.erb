<div class="float-center text-center">
<div class="cell">
<h2>New Review for <%= @coffeee.name %></h2>
</div>

<div class="cell">
<%= form_for @coffeee.reviews.new, :url => url_for(:controller => 'reviews', :action => 'create'), :html => {"data-abide" => ''} do |r| %>
    <%= r.hidden_field :coffeee_id, :value => @coffeee.id %>
    <%= r.hidden_field :user_id, :value => current_user.id %>
    <div class="field input-wrapper">
      <%= r.number_field :rating, in: 1..5, step: 1, placeholder: "Score from 1 - 5", required: true %>
    </div>
    <div class="field">
      <%= r.text_field :style, list: "styles" %>
      <datalist id="styles">
        <option value="Drip">
        <option value="Espresso">
        <option value="French Press">
        <option value="Percolator">
        <option value="Pour Over">
      </datalist>
    </div>
    <div class="field">
      <%= r.text_field :recipe, list: "recipes" %>
      <datalist id="recipes">
        <option value="Americano">
        <option value="Black">
        <option value="Cappucino">
        <option value="Espresso">
        <option value="Latte">
        <option value="Macciato">
        <option value="Mocha">
      </datalist>
    </div>
    <div class="field">
      <%= r.text_field :addatives, list: "addatives" %>
      <datalist id="addatives">
        <option value="Cream">
        <option value="Honey">
        <option value="None">
        <option value="Sugar">
        <option value="Vanilla">
      </datalist>
    </div>
    <div class="field">
      <%= r.check_box :favorite %>
    </div>
    <div class="field">
      <%= r.text_area :details %>
    </div>

  <div class="actions">
    <%= r.submit "Create Review" %>
  </div>
<% end %>
</div>
<br><br>

<div class="cell">
<%= link_to "Back to Home", users_path %>
</div>
</div>
