<div class="cell grid-x grid-padding-x small-12">
    <div class="cell small-12 medium-4">
        <h1>Coffee List</h1>
  </div>
  <div class="cell small-12 medium-8">
        <h5>Search By Name</h5>
        <%= form_tag("/coffee/search", method: "post", :enforce_utf8 => false) do %>
            <%= text_field_tag "name", params[:name] %>
            <%= submit_tag 'Search' %>
        <% end %>
  </div>
</div>
<div class="cell grid-x grid-padding-x small-12">
    <div class="cell">
    <% if params[:name] %>
        <h5>Search Results</h5>
        <p><%= link_to "Clear Search", coffeees_path %></p>
    <%else%>
    <%end%>

        <div class="grid-x grid-margin-x small-up-2 medium-up-4">
            <% @coffeees.each do |c| %>
                <%= link_to render(partial: "coffeees/indexcard", locals: {c: c}), coffeee_path(c) %>
            <%end%>
        </div>
    </div>
</div>

<%= render(partial: "layouts/back")%>

    


   