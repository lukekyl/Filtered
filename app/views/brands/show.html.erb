<div class="cell grid-x grid-padding-x small-12">
    <div class="cell">
        <h2>Company: <%= @brand.name %></h2>
    </div>
    <% if  current_user.admin %>
        <div class="cell">
            <p class="green"><strong><%= link_to "Edit Brand", edit_brand_path(@brand) %></strong></p>
            <p class="red"><strong><%= button_to 'Delete Brand',  brand_path(@brand),  method: :delete, :class => "delete_button" %></strong></p>
        </div>
    <%end%>
</div>

<div class="cell grid-x grid-padding-x small-12">
    <div class="cell small-12 medium-3">

        <h5>Company Details</h5>
        <p><strong>Location: </strong><%= @brand.location %></p>
    </div>

    <div class="cell small-12 medium-9">
        <%# Brand Coffees %>
        <h5><%="#{@brand.name}'s Coffee List:"%></h5>
        <div class="grid-x grid-margin-x small-up-2 medium-up-4">
            <% @brand.coffeees.each do |coffeee| %>
            <%= link_to render(partial: "brands/showcard", locals: {coffeee: coffeee}), coffeee_path(coffeee) %>
            <%end%>
        </div>
    </div>
</div>  


<%= render(partial: "layouts/back")%>

