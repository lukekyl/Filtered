<div class="cell grid-x grid-padding-x small-12">
    <div class="cell">
        <%= link_to "Back to Coffee", coffeee_path(@coffeee) %>
    </div>
    <div class="cell">
        <h2><%= @coffeee.name %></h2>
    </div>
    <% if  current_user.admin || current_user == @review.user %>
        <div class="cell">
            <p class="green"><strong><%= link_to "Edit Review", edit_coffeee_review_path(@coffeee, @review) %></strong></p>
            <p class="red"><strong><%= button_to 'Delete Review',  coffeee_review_path(@review),  method: :delete, :class => "delete_button" %></strong></p>
        </div>
    <%end%>
</div>

<div class="cell grid-x grid-padding-x small-12">
    <div class="cell small-12 medium-3">
        <h5>Company</h5>
        <% if !@coffeee.brand.nil? %>
        <p><strong><%= link_to @coffeee.brand.name, brand_path(@coffeee.brand) %></strong></p>
        <%else%>
        <p>Brand Not Yet Determined</p>
        <%end%>
    <br>
        <h5>Coffee Details</h5>
        <p><strong>Category: </strong><%= @coffeee.category %></p>
        <p><strong>Roast: </strong><%= @coffeee.roast %></p>
        <p><strong>Body: </strong><%= @coffeee.body %></p>
        <p><strong>Acidity: </strong><%= @coffeee.acidity %></p>
    </div>

    <div class="cell small-12 medium-9">
        <%# Coffee Review %>
        <h5><%= @review.user.username %>'s Review Details</h5>
        <p><strong>Rating: </strong><%= @review.rating %> Stars</p>
        <p><strong>Style: </strong><%= @review.style %></p>
        <p><strong>Recipe: </strong><%= @review.recipe %></p>
        <p><strong>Addatives: </strong><%= @review.addatives %></p>
        <p><strong>Details: </strong><%= @review.details %></p>
            
    </div>
</div>  

<%= render(partial: "layouts/back")%>